<AnchorPane id="AnchorPane" prefHeight="200.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vue.ControllerMenu">
	<children>
      <BorderPane prefHeight="200.0" prefWidth="320.0" style="-fx-background-color: darkblue;">
         <bottom>
            <GridPane prefHeight="155.0" prefWidth="320.0" style="-fx-border-insets: 1;" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
            		<Button mnemonicParsing="false" onAction="#launchGame1" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: green; -fx-border-insets: -1; -fx-border-color: black;" text="1 joueur" textFill="WHITE" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <GridPane.margin>
                        <Insets bottom="1.0" right="1.0" />
                     </GridPane.margin>
                  </Button>
            		<Button mnemonicParsing="false" onAction="#launchGame2" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: red; -fx-border-insets: -1; -fx-border-color: black;" text="2 joueurs" textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            		<Button mnemonicParsing="false" onAction="#displayOptions" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: yellow; -fx-border-insets: -1; -fx-border-color: black;" text="Aide" textFill="RED" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
            		<Button mnemonicParsing="false" onAction="#close" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: skyblue; -fx-border-insets: -1; -fx-border-color: black;" text="Quitter" textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
               </children>
            </GridPane>
         </bottom>
         <top>
            <Label prefHeight="35.0" prefWidth="77.0" text="TETRIS" textFill="WHITE" BorderPane.alignment="CENTER">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <font>
                  <Font size="20.0" />
               </font>
               <effect>
                  <Bloom />
               </effect>
            </Label>
         </top>
      </BorderPane>
	</children>
</AnchorPane>
